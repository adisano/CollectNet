@page
@model CollectNet.Pages.Lists.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>List</h4>
<hr />
@if (User.Identity.Name == null)
{
    <p>Please log in to use this feature.</p>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="List.ListName" class="control-label"></label>
                    <input asp-for="List.ListName" class="form-control" />
                    <span asp-validation-for="List.ListName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="List.ListTypes" class="control-label"></label>
                    <input asp-for="List.ListTypes" class="form-control" />
                    <span asp-validation-for="List.ListTypes" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="List.ListTags" class="control-label"></label>
                    <input asp-for="List.ListTags" class="form-control" />
                    <span asp-validation-for="List.ListTags" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>


    <div>
        <a asp-page="Index">Back to List</a>
    </div>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
