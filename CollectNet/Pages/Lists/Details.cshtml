@page
@model CollectNet.Pages.Lists.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>@Html.DisplayFor(model => model.List.ListName)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.List.ListName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.List.ListName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.List.ListTypes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.List.ListTypes)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.List.ListTags)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.List.ListTags)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.List.ListItems)
        </dt>
        <dd class="col-sm-10">
            @{
                var x = 0;
                foreach (var item in Model.ListItems)
                {
                    @Html.DisplayFor(model => model.ListItems[x].IsCollected)
                    <a href="/Items/Details?id=@Html.DisplayFor(model => model.ListItems[x].ID)">
                        @Html.DisplayFor(model => model.ListItems[x].ItemName)
                    </a>
                    <p></p>
                    x++;
                }
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.List.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
