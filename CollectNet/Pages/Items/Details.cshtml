@page
@model CollectNet.Pages.Items.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>@Html.DisplayFor(model => model.Item.ItemName)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item.ItemName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item.ItemName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item.ItemTypes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item.ItemTypes)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item.ItemTags)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item.ItemTags)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item.List.ListName)
        </dt>
        <dd class="col-sm-10">
            <a href="/Lists/Details?id=@Html.DisplayFor(model => model.Item.List.ID)">
                @Html.DisplayFor(model => model.Item.List.ListName)
            </a>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Item.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
